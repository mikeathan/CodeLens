{
  "name": "codelens",
  "displayName": "CodeLens",
  "description": "Developer productivity toolkit with code coverage, assembly inspection, and dependency analysis utilities",
  "version": "0.1.6",
  "publisher": "mikeathan",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnet-coverage.generateReport",
        "title": "Generate Code Coverage Report",
        "category": "CodeLens",
        "icon": "$(graph)"
      },
      {
        "command": "dotnet-coverage.showReport",
        "title": "Show Code Coverage Report",
        "category": "CodeLens",
        "icon": "$(preview)"
      },
      {
        "command": "dotnet-coverage.runTests",
        "title": "Run Tests with Coverage",
        "category": "CodeLens",
        "icon": "$(beaker)"
      },
      {
        "command": "dotnet-coverage.quickCoverage",
        "title": "Quick Coverage (Auto-detect Project)",
        "category": "CodeLens",
        "icon": "$(zap)"
      },
      {
        "command": "dotnet-coverage.viewAssemblyInfo",
        "title": "View Assembly Information",
        "category": "CodeLens"
      },
      {
        "command": "codelens.showNpmDepsGraph",
        "title": "Show NPM Dependency Graph",
        "category": "CodeLens"
      },
      {
        "command": "codelens.detectUnusedDependencies",
        "title": "Detect Unused Dependencies",
        "category": "CodeLens"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dotnet-coverage.generateReport",
          "when": "resourceExtname == .csproj || resourceExtname == .sln",
          "group": "dotnet@1"
        },
        {
          "command": "dotnet-coverage.runTests",
          "when": "resourceExtname == .csproj || resourceExtname == .sln",
          "group": "dotnet@2"
        },
        {
          "command": "dotnet-coverage.viewAssemblyInfo",
          "when": "resourceExtname == .dll || resourceExtname == .exe",
          "group": "dotnet@3"
        },
        {
          "command": "codelens.detectUnusedDependencies",
          "when": "resourceFilename == package.json",
          "group": "npm@1"
        }
      ],
      "editor/title": [
        {
          "command": "dotnet-coverage.quickCoverage",
          "when": "resourceExtname == .cs || resourceExtname == .csproj || resourceExtname == .sln",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "dotnet-coverage.generateReport",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "dotnet-coverage.showReport",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "dotnet-coverage.runTests",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "dotnet-coverage.quickCoverage",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "dotnet-coverage.viewAssemblyInfo",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "codelens.showNpmDepsGraph",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "codelens.detectUnusedDependencies",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "keybindings": [
      {
        "command": "dotnet-coverage.quickCoverage",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorLangId == csharp"
      },
      {
        "command": "dotnet-coverage.showReport",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "canvas": "^3.2.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "mocha": "^11.7.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
